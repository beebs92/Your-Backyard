<%- include("../partials/header") %>
<main>
<div class="container">
   <div class="row justify-content-center">
      <div class="col-md-12 text-center">
         <h1>Add a New Place</h1>
      </div>
      <div class="col-xs-11 col-md-4 col-lg-4">
         <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
               <label for="name">Name</label>
               <input class="form-control" type="text" name="campground[name]" id="name" placeholder="Redwoods">
            </div>
            <div class="form-group">
               <label for="image">Image</label>
               <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
               <label for="price">Price</label>
               <input class="form-control" type="text" name="campground[price]" id="price" placeholder="free" required>
            </div>
			 <div class="form-group">
				 <label>Place</label>
             <select class="form-control" type="text" name="campground[place]" id="place">
               <option value = "Campground">Campground</option>
               <option value = "Hike">Hike</option>
               <option value = "Beach">Beach</option>
             </select>
            
            </div>
            <div class="form-group">
               <label for="description">Description</label>
               <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="The Redwoods â€“ Whakarewarewa Forest" rows="4"></textarea>
            </div>
            <div class="form-group">
               <label for="location">Location</label>
               <input class="form-control" type="text" name="location" id="location" placeholder="Redwoods, Rotorua NZ">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
         </form>
         <a href="/campgrounds">Go back</a>
      </div>
   </div>
</div>
	</main>
<%- include("../partials/footer") %>