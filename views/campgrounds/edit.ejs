<%- include("../partials/header") %>
<main>
<div class="container">
   <div class="row justify-content-center">
      <div class="col-md-12 text-center">
         <h1>Edit <%= campground.name %></h1>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
         <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
               <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
               <input class="form-control" type="text" name="campground[price]" value="<%= campground.price %>">
            </div>
			 	 <div class="form-group">
				 <label>Place</label>
             <select class="form-control" type="text" name="campground[place]" id="place" value="<%= campground.place %>">
               <option value = "Campground">Campground</option>
               <option value = "Hike">Hike</option>
               <option value = "Beach">Beach</option>
				<option value="<%= campground.place %>" selected><%= campground.place %></option>
             </select>
            
            </div>
            <div class="form-group">
               <label for="image">Image</label>
               <input class="form-control" type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
               <input class="form-control input-md" type="text" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
               <label for="location">Location</label>
               <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
         </form>
         <a href="/campgrounds">Go back</a>
      </div>
   </div>
</div>
	</main>
<%- include("../partials/footer") %>