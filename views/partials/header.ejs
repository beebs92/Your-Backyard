<!doctype html>
<html lang="en">
   <head>
      <!-- Required meta tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <title>Your Backyard</title>
	<link rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
      <link rel="manifest" href="favicon/site.webmanifest">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
      <link href="https://fonts.googleapis.com/css2?family=Sora&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="/stylesheets/main.css">
     
      <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
   </head>
   <body>
      <!--NAVBAR CODE-->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <a class="navbar-brand" href="/">Your Backyard</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
               <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                  <a href="/campgrounds" class="nav-link">Home</a>
               </li>
            </ul>
            <ul class="navbar-nav navbar-right">
               <% if(!currentUser){ %>
               <li class="nav-item">
                  <a href="/login" class="nav-link">Login</a>
               </li>
               <li class="nav-item">
                  <a href="/register" class="nav-link">Sign Up</a>
               </li>
               <% } else { %>
               <li class="nav-item">
                  <a href="#" class="nav-link">Signed in as <%= currentUser.username %></a>
               </li>
               <li class="nav-item">
                  <a href="/logout" class="nav-link">Logout</a>
               </li>
               <% } %>
            </ul>
         </div>
      </nav>
      <div class="container">
         <% if(error && error.length > 0){ %>
         <div class="alert alert-danger" role="alert">
            <%= error %>
         </div>
         <% } %>
         <% if(success && success.length > 0){ %>
         <div class="alert alert-success" role="alert">
            <%= success %>
         </div>
         <% } %>
      </div>