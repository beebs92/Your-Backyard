<%- include("./partials/header") %>
<div class="row">
   <div class="col-md-12">
      <form class="form-signin" action="/register" method="POST">
         <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
         <label for="inputUsername">Username</label>
         <input type="text" id="inputUsername" class="form-control" name="username" placeholder="username" required autofocus>
         <label for="inputPassword" >Password</label>
         <input type="password" id="inputPassword" class="form-control" name="password" placeholder="password" required>
         <label for="inputPassword" >First Name</label>
         <input type="text" class="form-control" name="firstName" placeholder="first name" required autofocus>
         <label for="inputPassword" >Last Name</label>
         <input type="text" id="inputUsername" class="form-control" name="lastName" placeholder="last name" required autofocus>
         <label for="inputPassword" >Email</label>
         <input type="email" class="form-control" name="email" placeholder="email" required>
         <label for="inputPassword" >Avatar</label>
         <input type="text" class="form-control" name="avatar" placeholder="avatar url" required>
         <label for="inputPassword" >Admin code</label>
         <input type="password" class="form-control" name="adminCode" placeholder="admin access">
         <hr>
         <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
      </form>
      <div class="form-signin">
         <a href="/campgrounds">Go Back</a>
      </div>
   </div>
</div>
<%- include("./partials/footer") %>