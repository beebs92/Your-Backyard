<%- include("./partials/header") %>

<main>
<div class="row">
   <div class="col-md-12">
      <form class="form-signin" action="/reset/<%= token %>" method="POST">
         <h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>
		  
         <label for="password">New Password</label>
		  
         <input type="password" class="form-control" name="password" placeholder="new password" required autofocus>
		  
		  <label for="confirm">Confirm Password</label>
		  
         <input type="password" class="form-control" name="confirm" placeholder="confirm password" required autofocus>
		  
         <hr>
         <button class="btn btn-lg btn-primary btn-block" type="submit">Update Password</button>
      </form>
   </div>
</div>
	</main>

<%- include("./partials/footer") %>